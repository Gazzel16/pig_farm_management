<!-- dialog_add_pig.xml -->
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bottom_border"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_border"
        android:orientation="vertical"
        android:padding="12dp">

        <LinearLayout
            android:id="@+id/page1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edt_bg"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@color/white_custom"
                android:background="#ED2525"
                android:padding="12dp"
                android:textStyle="bold"
                android:text="Pig Details" />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Breed: "
                android:fontFamily="@font/fir_sans_italic"
                android:layout_marginTop="8dp"
                android:textStyle="bold"
                android:textColor="#ED2525"
                android:textSize="18sp"/>

            <EditText
                android:id="@+id/etPigBreed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_marginBottom="8dp"
                android:inputType="text" />

            <TextView
                android:id="@+id/textView30"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="BirthDate: "
                android:textColor="#ED2525"
                android:textSize="18sp"
                android:fontFamily="@font/fir_sans_italic" />

            <EditText
                android:id="@+id/etPigBirthDate"
                android:layout_width="match_parent"
                android:background="@null"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"

                android:inputType="text" />

            <TextView
                android:id="@+id/textView27"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/fir_sans_italic"
                android:textColor="#ED2525"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/spinnerPigGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:spinnerMode="dropdown"/>

            <Button
                android:id="@+id/nextBtn"
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:layout_height="40dp"
                android:layout_margin="20dp"
                android:background="#ED2525"
                android:textColor="@color/white_custom"
                android:text="Next" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/page2"
            android:visibility="gone"
            android:background="@drawable/edt_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ED2525"
                android:padding="12dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/backBtn"
                    android:layout_width="35sp"
                    android:layout_height="35sp"
                    android:src="@drawable/back"
                    android:tint="@color/white_custom"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Pig Health Details"
                    android:textColor="@color/white_custom"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.389"
                    app:layout_constraintStart_toEndOf="@+id/backBtn"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.636" />


            </androidx.constraintlayout.widget.ConstraintLayout>


            <TextView
                android:id="@+id/textView31"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Weight: "
                android:textColor="#ED2525"
                android:fontFamily="@font/fir_sans_italic"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/etPigWeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:inputType="text"
                />


            <TextView
                android:id="@+id/textView34"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Last Checkup: "
                android:layout_marginTop="8dp"
                android:textColor="#ED2525"
                android:fontFamily="@font/fir_sans_italic"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/etPigLastCheckUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@null"
                android:layout_marginBottom="8dp"
                android:focusable="false"
                android:clickable="true"

                android:inputType="text"
                />

            <TextView
                android:id="@+id/textView35"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ED2525"
                android:fontFamily="@font/fir_sans_italic"
                android:text="Next Checkup: "
                android:textSize="18sp" />

            <EditText
                android:id="@+id/etPigNextCheckUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@null"
                android:clickable="true"
                android:focusable="false"
                android:inputType="text"
                />
            <TextView
                android:id="@+id/textView32"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Illness: "
                android:textColor="#ED2525"
                android:fontFamily="@font/fir_sans_italic"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/spinnerPigIllness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:spinnerMode="dropdown"/>

            <TextView
                android:id="@+id/textView33"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vaccine: "
                android:textColor="#ED2525"
                android:fontFamily="@font/fir_sans_italic"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/spinnerVaccinationStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:spinnerMode="dropdown"/>

            <Button
                android:id="@+id/updatePig"
                android:layout_width="215dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:backgroundTint="#E02424"
                android:text="Update Pig"
                android:textColor="@android:color/white" />


        </LinearLayout>

    </LinearLayout>


</ScrollView>